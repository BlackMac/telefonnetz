@import "nib"
@import "variables.styl"
@import url("https://fonts.googleapis.com/css?family=Roboto:400,500,300")
@import url("https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css")


@font-face {
  font-family: "untitled-font-4";
  src:url("fonts/untitled-font-4.eot");
  src:url("fonts/untitled-font-4.eot?#iefix") format("embedded-opentype"),
    url("fonts/untitled-font-4.woff") format("woff"),
    url("fonts/untitled-font-4.ttf") format("truetype"),
    url("fonts/untitled-font-4.svg#untitled-font-4") format("svg");
  font-weight: normal;
  font-style: normal;

}

[data-icon]:before {
  font-family: "untitled-font-4" !important;
  content: attr(data-icon);
  font-style: normal !important;
  font-weight: normal !important;
  font-variant: normal !important;
  text-transform: none !important;
  speak: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

[class^="icon-"]:before,
[class*=" icon-"]:before {
  font-family: "untitled-font-4" !important;
  font-style: normal !important;
  font-weight: normal !important;
  font-variant: normal !important;
  text-transform: none !important;
  speak: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-close:before {
  content: "a";
}
.icon-play-1:before {
  content: "n";
}
.icon-play-1-1:before {
  content: "o";
}
.icon-mic:before {
  content: "d";
}
.icon-arrow-65:before {
  content: "e";
}
.icon-calendar:before {
  content: "b";
}
.icon-tag-2:before {
  content: "c";
}
.icon-tag-1:before {
  content: "f";
}
.icon-id-1:before {
  content: "g";
}
.icon-bank-2:before {
  content: "h";
}
.icon-arrow-67:before {
  content: "i";
}
.icon-arrow-dot-1:before {
  content: "j";
}
.icon-arrow-circle-1:before {
  content: "k";
}
.icon-arrow-61:before {
  content: "l";
}


body, html
  font-family 'Roboto', sans-serif
  color PrimaryTextColor
  height 100%
  font-size 15px

HeaderHeight = 40px

body
  padding-top HeaderHeight

*
  box-sizing border-box

a
  color PrimaryTextColor
  text-decoration none
  cursor pointer
  // &:hover
  //   color PrimaryColor

.app-header
  background-color PrimaryColor
  position fixed
  top 0
  left 0
  right 0
  height HeaderHeight
  color PrimaryTextColorLight
  font-weight 300
  font-size 14px
  a
    color PrimaryTextColorLight
  .wrapper
    display flex
    padding 0 20px
    .left
      flex 1
      #logo
        height HeaderHeight - 20
        margin-top 10px
    .right
      line-height HeaderHeight - 2
      vertical-align middle
      position relative
      padding-right 10px
      .start-listening
        background #fff
        border-radius 1000px
        width 70px
        height 70px
        display block
        position absolute
        left 100%
        top -10px
        margin-left 20px
        text-align center
        vertical-align middle
        line-height 80px
        box-shadow 0px 1px 2px rgba(#000, .2)
        i
          vertical-align -6px
          font-size 30px
          color PrimaryColor
      .more-account-actions
        font-size 10px
        margin-left 5px

table
  font-size 13px
  width 100%
  thead
    tr
      th
        text-align left
        padding 10px
        padding-bottom 10px
        color HintTextColor
        border-bottom 1px solid rgba(#000, .05)

  tbody
    tr
      border-bottom 1px solid rgba(#000, .03)
      td
        text-align left
        padding 5px 10px
        padding 15px 10px
      &:first-of-type
        td
          padding-top 15px
      &:last-of-type
        border-bottom 0
        td
          padding-bottom 15px

  tfoot
    tr
      td
        border-top 1px solid rgba(#000, .05)
        color HintTextColor
        padding 10px 10px 5px


.wrapper
  max-width 1000px
  margin 0 auto
  height 100%
  display flex
  .navigation
    width 200px
    border-right DefaultBorder
    height 100%
    position relative
    padding-top 25px
    .nav-item
      display block
      padding 9px 10px 7px
      margin 5px 10px
      border-radius BorderRadius
      &.active
        background-color PrimaryColorLight
      &.disabled
        opacity .5
        pointer-events none
      &.active, &:not(.disabled):hover
        color PrimaryColor
        i
          color PrimaryColor
      i
        margin-right 5px
        vertical-align -2px
        color SecondaryTextColor
    .logo
      font-weight 500
      position absolute
      top 30px
      left 20px
      color HintTextColor
      font-size 20px
  .view
    flex 1
    padding 30px
    overflow-x hidden
    overflow-y scroll
    h1
      font-size 26px
      margin-bottom 30px
      border-bottom DefaultBorder
      padding-bottom 15px
      .header-action
        float right
        font-size 14px
        padding 10px 15px !important
        margin-top -5px
        margin-left 5px
    .account-header
      color HintTextColor
      text-align right
      margin-bottom 35px
      font-size 13px

    .no-entries
      color HintTextColor
      text-align center
      margin-top 150px
      .btn
        margin-top 20px
      .big-icon
        font-size 70px
        margin-bottom 30px
        opacity .5
      h2
        font-size 20px

input.form-control
  border DefaultBorder
  font-size 20px
  width 300px
  margin-bottom 5px
  padding 10px 20px
  box-shadow inset 0 1px 2px rgba(#000, .05)
  font-size 18px
  color PrimaryTextColor

.btn
  background PrimaryColor
  color PrimaryTextColorLight
  border 0
  border-radius BorderRadius
  padding 10px 30px !important
  display inline-block
  font-size 16px
  cursor pointer
  &:hover
    opacity 0.8

.alert
  color #f02a2a
  padding 20px
  display inline-block

/*
 * Login & Register
 */

.entry
  text-align center
  color PrimaryTextColor !important
  h3
    font-weight 400
    font-size 26px
  .entry-form
    p
      margin-top 20px
    label
      width 150px
      text-align right
      display inline-block
      margin-right 10px
